<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Player X turn"
        android:textSize="20sp"
        android:padding="8dp" />

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:columnCount="3"
        android:rowCount="3"
        android:useDefaultMargins="true">


    <!-- 9 Buttons -->
        <Button android:id="@+id/b00" style="@style/TttCell"/>
        <Button android:id="@+id/b01" style="@style/TttCell"/>
        <Button android:id="@+id/b02" style="@style/TttCell"/>
        <Button android:id="@+id/b10" style="@style/TttCell"/>
        <Button android:id="@+id/b11" style="@style/TttCell"/>
        <Button android:id="@+id/b12" style="@style/TttCell"/>
        <Button android:id="@+id/b20" style="@style/TttCell"/>
        <Button android:id="@+id/b21" style="@style/TttCell"/>
        <Button android:id="@+id/b22" style="@style/TttCell"/>

    </GridLayout>

    <Button
        android:id="@+id/btnPlayAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:enabled="false" />

</LinearLayout>
